{
	"name": "WLED",
	"dockerFile": "Dockerfile",

	// The device-parameter is to attach an ESP-device (attached to your host) to the container. 
	// Remove this parameter if no ESP-device is connected.
	"runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined" ,"--device=/dev/ttyUSB0"],
	"settings": { 
		"terminal.integrated.shell.linux": "/bin/bash"
	},

	"extensions": [
		"ms-vscode.cpptools",
		"platformio.platformio-ide"
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [8008]